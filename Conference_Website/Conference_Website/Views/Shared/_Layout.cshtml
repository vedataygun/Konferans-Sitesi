@using Conference_Website.Extension;
@using Conference_Website.Extensions;
@using Conference_Website.Models;

<!DOCTYPE html>

<html>
<head>
    <link href="~/css/alert.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    @RenderSection("css",false)
    <title>@ViewBag.Title</title>
</head>
<body>

        @if(TempData.Get<AlertBox>("alert") !=null)
            {
        <div class="alrtbox alrtbox-@(TempData.Get<AlertBox>("alert").TypeString.ToLower())" data-theme="dark">
            <div class="alr-container">
                            @switch (TempData.Get<AlertBox>("alert").Type)
                            {
                                case AlertType.Info:
                                    <i class="fa-solid fa-circle-info"></i>
                                    break;
                                case AlertType.Warning:
                                    <i class="fa-solid fa-triangle-exclamation"></i>
                                    break;
                                case AlertType.Success:
                                    <i class="fa-solid fa-circle-check"></i>
                                    break;
                                case AlertType.Danger:
                                    <i class="fa-sharp fa-solid fa-circle-xmark"></i>
                                    break;
                                default:
                                    break;

                            }
                        <div class="alrt-msg">
                            <span>@(TempData.Get<AlertBox>("alert").Header)</span>
                            <p>@(TempData.Get<AlertBox>("alert").Message)</p>
                        </div>
                    </div>
                    <i class="fa-solid fa-xmark alrtbox-close-btn"></i>
                </div>
        }

        @RenderBody()

         <script src="https://code.jquery.com/jquery-3.6.4.min.js"
                integrity="sha256-oP6HI9z1XaZNBrJURtCoUT5SUnxFr8s3BzRl+cbzUq8=" crossorigin="anonymous">
        </script>
        <script src="/js/layout.js"></script>
        <script async
                src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAwh2B7zmy_PxeUpzdO8P5OnKDh9I7Qk8U&callback=initMap">
        </script>

        @RenderSection("javascript",false)


</body>
</html>
