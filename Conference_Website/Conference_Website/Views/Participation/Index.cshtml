@using Conference_Website.Models;
@model Participant

@{
    Layout = "_Layout";
    ViewBag.Title = "Konferans Katılım Sayfası";

}

@section css{


    <link href="~/css/register.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
}

    <div class="header">
        <div class="navbar">
            <a href="/" class="logo">@SiteSettings.LogoName</a>
            <nav>
                <ul>
                <li><a href="/#header">Anasayfa</a></li>
                    <li><a href="/#konusmacilar">Konuşmacılar</a></li>
                    <li><a href="/#gundem">Gündem</a></li>
                    <li><a href="/#mekan">Mekan</a></li>
                    <li><a href="/#adres">Adres</a></li>
                </ul>
            </nav>

            <button class="hbgr-menu">
                <span></span>
                <span></span>
                <span></span>
            </button>
        </div>
    </div>

    <div class="body">
        <h1>Bilgileri Doldurun Lütfen.</h1>
        <form asp-controller="Participation" asp-action="Index" method="post">

            <div class="container">
                <div class="input-group">
                    <input type="text" name="Name" placeholder="İsim">
                    <input type="text" name="Surname" placeholder="Soyisim">
                </div>
                <div class="input-group">
                    <input type="text" name="Email" placeholder="E-Posta">
                    <button type="submit">
                        Katıl
                        <i class="fa-solid fa-arrow-right"></i>
                    </button>
                </div>
            </div>
        </form>
    </div>

    <footer>
        <span>Design by Vedat AYGÜN</span>
    </footer>
